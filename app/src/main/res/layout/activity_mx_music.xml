<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FAF9F6"
    tools:context=".Mx_Music">

    <TextView
        android:id="@+id/contact_heading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="MX MUSIC"
        android:textSize="@dimen/textSize"
        android:layout_marginTop="@dimen/layoutSize"
        android:textStyle="bold"
        android:fontFamily="@font/open_sans"
        android:textColor="@color/black" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/song_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="@dimen/cardDimensions"
        app:cardCornerRadius="@dimen/cardDimensions"
        android:layout_marginTop="50sp"
        android:layout_marginLeft="@dimen/layoutSize"
        android:layout_marginRight="@dimen/layoutSize"
        app:strokeColor="#F2F3F5"
        app:strokeWidth="1dp">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_weight="1"
                android:layout_width="@dimen/layoutWidth"
                android:layout_height="wrap_content"
                android:text="Life Is Good"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:layout_marginLeft="10sp" />

            <Button
                android:id="@+id/play1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10sp"
                android:text="Play" />

            <Button
                android:id="@+id/pause1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5sp"
                android:text="Pause" />

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/song_2"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        app:cardElevation="@dimen/cardDimensions"
        app:cardCornerRadius="@dimen/cardDimensions"
        android:layout_marginTop="30sp"
        android:layout_marginLeft="@dimen/layoutSize"
        android:layout_marginRight="@dimen/layoutSize"
        app:strokeColor="#F2F3F5"
        app:strokeWidth="1dp">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="When I Grow Up (feat. Wiz Khalifa)"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:layout_marginStart="10sp" />

            <Button
                android:id="@+id/play2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10sp"
                android:layout_marginTop="10sp"
                android:text="Play" />

            <Button
                android:id="@+id/pause2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10sp"
                android:layout_marginEnd="5sp"
                android:text="Pause" />

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/song_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="@dimen/cardDimensions"
        app:cardCornerRadius="@dimen/cardDimensions"
        android:layout_marginTop="30sp"
        android:layout_marginLeft="@dimen/layoutSize"
        android:layout_marginRight="@dimen/layoutSize"
        app:strokeColor="#F2F3F5"
        app:strokeWidth="1dp">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Stressed Out"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:layout_marginStart="10sp" />

            <Button
                android:id="@+id/play3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10sp"
                android:text="Play" />

            <Button
                android:id="@+id/pause3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="5sp"
                android:text="Pause" />

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</LinearLayout>