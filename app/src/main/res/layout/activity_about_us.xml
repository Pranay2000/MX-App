<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".AboutUs">

    <TextView
        android:id="@+id/aboutPage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Welcome to About Us Page"
        android:fontFamily="@font/open_sans"
        android:textColor="@color/black"
        android:textSize="@dimen/textSize"
        android:layout_marginTop="@dimen/layoutSize"
        android:textStyle="bold" />


    <com.google.android.material.card.MaterialCardView
        android:id="@+id/ceo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="@dimen/cardDimensions"
        app:cardCornerRadius="@dimen/cardDimensions"
        android:layout_marginTop="50sp"
        android:layout_marginLeft="@dimen/layoutSize"
        android:layout_marginRight="@dimen/layoutSize"
        app:strokeColor="#F2F3F5"
        app:strokeWidth="1dp">

        <LinearLayout
            android:orientation="horizontal"
            android:padding="15sp"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/ceoImg"
                android:src="@drawable/ceo"
                android:layout_width="@dimen/layoutWidth"
                android:layout_height="@dimen/layoutHeight" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginLeft="@dimen/textSize">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:text="Name: KARAN BEDI"
                    android:textStyle="bold"
                    android:fontFamily="@font/open_sans" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Designation: CEO"
                    android:fontFamily="@font/open_sans"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Founder of one of the largest OTT Platform: MX Player"
                    android:fontFamily="@font/open_sans"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:layout_marginTop="10sp"/>

            </LinearLayout>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/manager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="@dimen/cardDimensions"
        app:cardCornerRadius="@dimen/cardDimensions"
        android:layout_marginTop="50sp"
        android:layout_marginLeft="@dimen/layoutSize"
        android:layout_marginRight="@dimen/layoutSize"
        app:strokeColor="#F2F3F5"
        app:strokeWidth="1dp">

        <LinearLayout
            android:orientation="horizontal"
            android:padding="15sp"
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/managerImg"
                android:src="@drawable/vice_president"
                android:layout_width="@dimen/layoutWidth"
                android:layout_height="@dimen/layoutHeight" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginLeft="@dimen/textSize">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="18sp"
                    android:text="Name: SIDDHARTH MANTRI"
                    android:textStyle="bold"
                    android:fontFamily="@font/open_sans" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Designation: Senior Vice President"
                    android:fontFamily="@font/open_sans"
                    android:id="@+id/DocSpecial"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Company: MX PLAYER"
                    android:fontFamily="@font/open_sans"
                    android:id="@+id/DocExp"
                    android:textSize="15sp"
                    android:textStyle="bold" />

            </LinearLayout>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>


</LinearLayout>